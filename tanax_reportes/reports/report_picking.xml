<?xml version="1.0"?>
<odoo>
    <template id="report_delivery_document_tanax">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>
                        <span t-esc="','.join(docs.mapped('name'))"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto" name="div_origin">
                            <strong>Orders:</strong>
                            <p t-esc="','.join(docs.mapped('origin'))"/>
                        </div>
                    </div>
                    <table class="table table-sm" name="stock_move_table">
                        <thead>
                            <tr>
                                <th name="th_sm_product"><strong>Code</strong></th>
                                <th name="th_sm_product"><strong>Name</strong></th>
                                <th name="th_sm_product"><strong>Origin</strong></th>
                                <th name="th_sm_product"><strong>Lot</strong></th>
                                <th name="th_sm_quantity"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="docs.mapped('move_line_ids').sorted(key=lambda m: (m.location_id, m.product_id.id, m.lot_id.id))"/>
                            <t t-set="qty" t-value="0"></t>
                            <tr t-foreach="range(0,len(lines))" t-as="i">
                                <t t-set="move_0" t-value="lines[i]"/>
                                <t t-set="move_1" t-value="lines[i+1] if i+1 &lt; len(lines) else False"/>
                                <t t-if="not move_1 or move_0.product_id != move_1.product_id or move_0.lot_id != move_1.lot_id or move_1.location_id != move_0.location_id">
                                    <t t-set="qty" t-value="qty + (move_0.qty_done or move_0.product_uom_qty)"></t>
                                    <td>
                                        <span t-esc="move_0.product_id.default_code"/>
                                    </td>
                                    <td>
                                        <span t-esc="move_0.product_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="move_0.location_id.display_name"/>
                                    </td>
                                    <td>
                                        <span t-esc="move_0.lot_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="qty"/>
                                    </td>
                                    <t t-set="qty" t-value="0"/>
                                </t>  
                                <t t-else="">
                                    <t t-set="qty" t-value="qty + move_0.product_uom_qty"/>
                                </t>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
    <record id="action_report_delivery" model="ir.actions.report">
        <field name="name">Picking</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">tanax_reportes.report_delivery_document_tanax</field>
        <field name="report_file">tanax_reportes.report_delivery_document_tanax</field>
        <field name="print_report_name">'Picking - %s - %s' % (object.partner_id.name or '', object.name)</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>
</odoo>