<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="fecha_agendamiento" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                <field name="fecha_camion" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                <field name="fecha_entrega" attrs="{'invisible': [('state', '!=', 'done')]}"/>
            </xpath>
        </field>
    </record>
    <record id="vpicktree" model="ir.ui.view">
        <field name="name">stock.picking.tree</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="client_order_ref"/>
            </field>
            <field name="json_popover" position="after">
                <field name="client_order_ref"/>
                <field name="fecha_agendamiento" optional="hide"/>
                <field name="fecha_camion" optional="hide"/>
                <field name="fecha_entrega" optional="hide"/>
            </field>
        </field>
    </record>
</odoo>
